<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".views.activity.edit.EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/editProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/app_color"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:paddingRight="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/commonBack"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_back"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white" />

                    <TextView

                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo_2_bold"
                        android:text="Edit Profile"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/editSave"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView

                        android:id="@+id/editSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/exo_2_semibold"
                        android:text="save"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="80dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:paddingRight="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="ShopName"
                    android:textColor="@color/text_color_secondary" />

                <EditText
                    android:id="@+id/editProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:inputType="textCapSentences"
                    android:text=""
                    android:textColor="@color/text_color_primary"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="Shop Address"
                    android:textColor="@color/text_color_secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editProfileAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo_2_semibold"
                        android:inputType="textPostalAddress"
                        android:text=""
                        android:textColor="@color/text_color_primary"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/editMapPick"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_edit" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="Email"
                    android:textColor="@color/text_color_secondary" />

                <EditText
                    android:id="@+id/editProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textColor="@color/text_color_primary"
                    android:textSize="18sp" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="Phone"
                    android:textColor="@color/text_color_secondary" />

                <EditText
                    android:id="@+id/editProfileMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:enabled="false"
                    android:fontFamily="@font/exo_2_semibold"
                    android:inputType="number"
                    android:maxLength="10"
                    android:text=""
                    android:textColor="@color/text_color_primary"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="Landline"
                    android:textColor="@color/text_color_secondary" />

                <EditText
                    android:id="@+id/editProfilelandline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text=""
                    android:textColor="@color/text_color_primary"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="Current Business"
                    android:textColor="@color/text_color_secondary" />

                <EditText
                    android:id="@+id/editProfileBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:inputType="textCapSentences"
                    android:text=""
                    android:textColor="@color/text_color_primary"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="Experience"
                    android:textColor="@color/text_color_secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editProfileExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo_2_semibold"
                        android:hint="year"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/text_color_primary"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#EAE7E7" />

                    <EditText
                        android:id="@+id/editProfileExperienceMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo_2_semibold"
                        android:hint="month"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/text_color_primary"
                        android:textSize="18sp" />
                </LinearLayout>


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="District"
                    android:textColor="@color/text_color_secondary" />

                <EditText
                    android:id="@+id/editProfileDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text=""
                    android:textColor="@color/text_color_primary"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="State"
                    android:textColor="@color/text_color_secondary" />

                <EditText
                    android:id="@+id/editProfileState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text=""
                    android:textColor="@color/text_color_primary"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="Pincode"
                    android:textColor="@color/text_color_secondary" />

                <EditText
                    android:id="@+id/editProfilePincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/exo_2_semibold"
                    android:maxLength="6"
                    android:text=""
                    android:textColor="@color/text_color_primary"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/edit_kyc"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/exo_2_semibold"
                    android:text="Pincode"
                    android:textColor="@color/app_color" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ProfileAddLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">


            <include
                android:id="@+id/signUp"
                layout="@layout/signup" />


        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>