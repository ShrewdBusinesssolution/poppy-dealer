<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utilities.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".utilities.MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@drawable/round_outline_layout"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mapAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/exo_2_medium"
            android:gravity="center"
            android:hint="Please pick Address"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/text_color_primary" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mapAddressSubmit"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_outline_layout"
            android:backgroundTint="@color/app_color"
            android:text="proceed"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>


</FrameLayout>





